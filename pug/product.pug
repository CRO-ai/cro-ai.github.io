          <g id="Combined-Shape" stroke="none" fill="none" fill-rule="nonzero">
              <use fill="black" fill-opacity="1" filter="url(#filter-2)" xlink:href="#path-1"></use>
              <use fill="#FFFFFF" fill-rule="evenodd" xlink:href="#path-1"></use>
          </g>
        </svg>
        if product == 'cto'
          include includes/cto-icon-hifi.pug
        else if product == 'cro'
          include includes/cro-icon-hifi.pug
        else if product == 'cco'
          include includes/cco-icon-hifi.pug
        else if product == 'chro'
          include includes/chro-icon-hifi.pug
        //-img(src='img/logos/'+product+'-icon-hifi.svg')

      .row
        .col.full(align='center')
          block introduction
            
      if product == 'cto'
        .row.gfx
          .col.full(align='center')
            img(src='img/pipeline.svg')
      else if product == 'cro'
        .row.gfx
          .col.full(align='center')
            img(src='img/launch.svg')
              
      .grid
        .row
          block features

    section.container#signup(class=product)
      .stripes
        span
        span
      .row
        .col.full(align='center')
          .box
            i.fa.fa-flask(style='font-size:2.625em;',color=product)
            h4 Join our Beta
            p We're looking for early partners to join us and work with our technology. Get in touch via our beta list.

            //-include beta.pug
            +beta(product)

    include footer.pug
