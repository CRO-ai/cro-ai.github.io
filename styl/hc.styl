// Hack Capital Styles
header.hc
  padding-bottom 500px
  #particles
    position absolute
    top 0
    right 0
    bottom 0
    left 0
    z-index 0 !important
    background $blue

.container
  &#intro.hc
    background $dark
    color white
    text-align center
    padding-bottom 0

    .grid
      &:before
        position absolute
        content ""
        width 100%
        max-width 391px
        height 350px
        background url(img/flat-colour-product.svg) 100% center no-repeat
        opacity 0.05
        margin 0 auto
        top -349px
        right 0
        bottom 0
        left 0
    > *
      position relative
      z-index 1

    &:after
      top 0
      left 0
      transform-origin left top
      transform skewY(-2deg)
      content ""
      width 100%
      height 100%
      position absolute
      background inherit
      z-index 0
      border-top 10px solid rgba(white,0.05)

  &#join
    background $green url(img/pattern.png) left bottom
    background-size 128px
    color white
    text-align center

    > *
      position relative
      z-index 2

    &:before
      top 0
      left 0
      transform-origin left top
      transform skewY(-2deg)
      content ""
      width 100%
      height 110%
      position absolute
      background inherit
      box-shadow inset 0 10px 0 0 rgba(40,44,48,0.05)
      z-index 1

    &:after
      position absolute
      width 100%
      height 10px
      left 0
      right 0
      bottom 0
      background rgba(40,44,48,0.05)
      content ""
      z-index 2
